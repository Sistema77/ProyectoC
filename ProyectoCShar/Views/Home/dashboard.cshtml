﻿@{
    ViewData["Title"] = "dashboard";
    var noAdmin = ViewData["noAdmin"] as string;
    var noSePuedeEliminar = ViewData["noSePuedeEliminar"] as string;
    var error = ViewData["error"] as string;
}
<div class="container py-4">
    <div class="row cardPrincipal">
        <div class="col">
            <h3 class="text-center mt-5 subtituloSecundario3">Dashboard</h3>
            <hr class="border border-primary border-2 opacity-55 mb-5 mt-4">
            <h4 class="text-primary text-center subtituloSecundario">Bienvenido/a <span>@User.Identity.Name</span></h4>
            <div class="text-center mt-4">
            </div>
        </div>
    </div>
    <div class="row">
        @if (User.IsInRole("ROLE_ADMIN"))
        {
            <div class="col-md-4">
                <div class="card mb-4 dashboardCard border border-dark cardPrincipal">
                    <i class="bi bi-person-fill-gear fs-1 ms-4" style="color: #1f3c85"></i>
                    <div class="card-body">
                        <h5 class="card-title">Administrarción</h5>
                        <p class="card-text">Acceda para gestionar usuarios.</p>
                        <a href="/privada/administracion-usuarios" class="btn buttonPrincipal"><i class="bi bi-arrow-right-circle"> Acceder</i></a>
                    </div>
                </div>
            </div>
        }
        @if (User.IsInRole("ROLE_USER"))
        {
            <div class="col-md-4">
                <div class="card mb-4 dashboardCard border border-dark cardPrincipal">
                    <i class="bi bi-person-fill-gear fs-1 ms-4" style="color: #1f3c85"></i>
                    <div class="card-body">
                        <h5 class="card-title">Cuenta</h5>
                        <p class="card-text">Acceda para gestionar Cuentas.</p>
                        <a href="/privada/cuenta" class="btn buttonPrincipal"><i class="bi bi-arrow-right-circle"> Acceder</i></a>
                    </div>
                </div>
            </div>
        }
    </div>
    @if (!string.IsNullOrEmpty(noAdmin))
    {
        <div class="alert alert-danger">
           ¡Recurso prohibido!, No tiene los permisos suficientes para acceder a este recurso
        </div>
    }
    @if (!string.IsNullOrEmpty(noSePuedeEliminar))
    {
        <div class="alert alert-danger">
            ¡Error!, No se puede eliminar a un usuario con permisos de administrador
        </div>
    }
    @if (!string.IsNullOrEmpty(error))
    {
        <div class="alert alert-danger">
            ¡Error!, Ocurrio un error no esperado, intentelo de nuevo
        </div>
    }

</div>